/**
 * Streams ...
 */

typeclass InputStream<Character, T>:
	Character get(T* object)
	
	size_t    read(T* object, Character* buffer, size_t buffer_size)

	/* TODO: Wie EOF anzeigen? exception oder ein EOF Zeichen? */


typeclass OutputStream<Character, T>:
	func void put(T* object, Character c)

	func void write(T* object, const Character* buffer, size_t buffer_size)
	/* Fehlerzust√§nde? Exceptions oder? */

/**
 * Formatting
 */
typeclass Printable<T, OutputStream Stream>:
	func void print(Stream* stream, T object)

instance Printable<int, OutputStream Stream>:
	func void print(Stream* stream, int object):
		put(Stream, '9')

int main():
	print(stderr, 20)

